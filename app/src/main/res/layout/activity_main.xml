<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:background="@drawable/background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/movie_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/image11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/movie_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="군도"
                        android:textColor="#ffffffff"
                        android:textSize="23dp" />

                    <ImageView
                        android:id="@+id/movie_age"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_15" />
                </LinearLayout>

                <TextView
                    android:id="@+id/movie_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2014.07.23 개봉"
                    android:textColor="#ffffffff"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/movie_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="액션 / 137 분"
                    android:textColor="#ffffffff"
                    android:textSize="17dp"
                    android:layout_marginLeft="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp">

                    <Button
                        android:id="@+id/thumb_up_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_thumb_up" />

                    <TextView
                        android:id="@+id/thumb_up_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="#ffffffff"
                        android:textSize="18dp"
                        android:layout_marginLeft="3dp"/>

                    <Button
                        android:id="@+id/thumb_down_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_thumb_down"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/thumb_down_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#ffffffff"
                        android:textSize="18dp"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="#11111111"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rank_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:gravity="center_horizontal"
                    android:text="예매율"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/rank_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="5위 1.8%"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="85dp"
                android:layout_marginRight="4dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:gravity="center_horizontal"
                    android:text="평점"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <RatingBar
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:numStars="5"
                      android:rating="4.5"
                      style="@style/Widget.AppCompat.RatingBar.Small"/>

                    <TextView
                        android:id="@+id/score_3"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"
                        android:text="8.2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/audience_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:gravity="center_horizontal"
                    android:text="누적관객수"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/audience_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="839,399명"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#11111111"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="줄거리"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:background="#ffffffff"/>


            <TextView
                android:id="@+id/stroy_stroy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:background="#ffffffff"
                android:text="군도 백성을 구하라\n양반과 탐관오리들의 착취가 극에 달했던 조선 철종 13년.\n힘없는 백성의 편이 되어 세상을 바로잡고자 하는 의적떼인 군도(群盜), 지리산 추설이 있었다.\n
                    \n쌍칼 도치 vs 백성의 적 조윤\n잦은 자연재해, 기근과 관의 횡포까지 겹쳐 백성들의 삶이  날로 피폐해 져 가는 사이, 나주 대부호의 서자로 조선
                    \n최고의 무관 출신인 조윤은 극악한 수법으로 양민들을 수탈, 삼남지방 최고의 대부호로 성장한다. 한편 소, 돼지를 잡아 근근이 살아가던 천한 백정 돌무치는 죽어도 잊지 못할
                    \n끔찍한 일을 당한 뒤 군도에 합류, 지리산 추설의 신 거성(新 巨星) 도치로 거듭난다.
                    \n
                    \n뭉치면 백성, 흩어지면 도적!
                    \n망할 세상을 뒤집기 위해, 백성이 주인인 새 세상을 향해
                    \n도치를 필두로 한 군도는 백성의 적, 조윤과 한 판 승부를
                    \n시작하는데..."
                android:textSize="16dp" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#11111111">

            <TableRow
                android:layout_width="match_parent"
                android:background="#ffffffff">

                <TextView
                    android:id="@+id/director_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="감독/출연"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#11111111">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ffffffff"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/director"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:text="감독"
                    android:textColor="#DD000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/actor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="23"
                    android:text="윤종빈"
                    android:textColor="#AA000000"
                    android:textSize="18dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffffff"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="출연"
                    android:layout_weight="0"
                    android:textColor="#DD000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="하정우(도치),"
                    android:layout_weight="1"
                    android:textColor="#AA000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="강동원(조윤)"
                    android:layout_weight="1"
                    android:textColor="#AA000000"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="23"
                    android:textColor="#AA000000"
                    android:textSize="18dp"/>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:background="#11111111"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffffff"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/oneLine_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="한줄평"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/write_button1"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_review_selected" />

                <TextView
                    android:id="@+id/write_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:padding="10dp"
                    android:text="작성하기"
                    android:textColor="#ff561d"
                    android:textSize="18dp" />

            </LinearLayout>

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/ScrollView2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#ffffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffffff"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="25dp">

                <Button
                    android:id="@+id/view_all_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/linear_button_border"
                    android:text="모두 보기"
                    android:textColor="@color/purple_200"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/facebook_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/kakaoTalk_button"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_kakao"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/ticketing_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#ff561d"
                android:text="예매하기"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="0dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>